{
  "manifest_version": 3,
  "name": "WebPage Summarizer",
  "version": "1.0",
  "description": "Summarize web page content using ChatGPT API",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
